{
  "type": "module",
  "name": "@tomer/fn",
  "version": "0.0.0",
  "author": {
    "name": "Tomer Aberbach",
    "email": "tomeraberbach@gmail.com",
    "url": "https://tomeraberba.ch"
  },
  "description": "A tree-shakeable functional programming library.",
  "keywords": [
    "generator",
    "lazy",
    "iterable",
    "iterator",
    "iter",
    "functional"
  ],
  "files": [
    "./src"
  ],
  "main": "./src/index.js",
  "homepage": "https://github.com/TomerAberbach/fn",
  "repository": "TomerAberbach/fn",
  "bugs": {
    "url": "https://github.com/TomerAberbach/fn/issues"
  },
  "license": "Apache 2.0",
  "scripts": {
    "license": "addlicense $(git diff --name-only HEAD)",
    "lint:prettier:base": "prettier --loglevel silent",
    "lint:prettier": "pnpm run lint:prettier:base -- --write .",
    "lint:eslint:base": "eslint --cache --ext js --ignore-path .gitignore",
    "lint:eslint": "pnpm run lint:eslint:base -- --fix .",
    "lint": "run-s lint:*",
    "test": "c8 ava"
  },
  "prettier": "@tomer/prettier-config",
  "eslintConfig": {
    "extends": "@tomer"
  },
  "browserslist": [
    "node >= 12"
  ],
  "babel": {
    "presets": [
      "@babel/env"
    ]
  },
  "lint-staged": {
    "*.js": [
      "addlicense",
      "pnpm run lint:prettier:base -- --write",
      "pnpm run lint:eslint:base -- --fix"
    ],
    "!(pnpm-lock).{json,yaml,md}": "pnpm run lint:prettier:base -- --write"
  },
  "commitlint": {
    "extends": "@commitlint/config-conventional"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "ava": {
    "babel": true,
    "require": [
      "@babel/register",
      "./config/fast-check.js"
    ],
    "files": [
      "./test/**/*.js",
      "!**/helpers.js"
    ]
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@babel/core": "^7.12.10",
    "@babel/node": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@tomer/eslint-config": "^0.0.12",
    "@tomer/prettier-config": "^0.0.2",
    "ava": "^3.14.0",
    "ava-fast-check": "^4.0.0",
    "babel-eslint": "^10.1.0",
    "c8": "^7.3.5",
    "eslint": "^7.16.0",
    "fast-check": "^2.10.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "object-hash": "^2.1.1",
    "prettier": "^2.2.1"
  },
  "engines": {
    "node": ">= 12"
  }
}
