{
  "type": "module",
  "name": "@tomer/fn",
  "version": "0.0.0",
  "author": {
    "name": "Tomer Aberbach",
    "email": "tomeraberbach@gmail.com",
    "url": "https://tomeraberba.ch"
  },
  "description": "A tree-shakeable functional programming library.",
  "keywords": [
    "generator",
    "lazy",
    "iterable",
    "iterator",
    "iter",
    "functional"
  ],
  "files": [
    "./src"
  ],
  "module": "./src/index.js",
  "main": "./cjs/index.js",
  "exports": {
    "import": "./src/index.js",
    "require": "./cjs/index.js"
  },
  "homepage": "https://github.com/TomerAberbach/fn",
  "repository": "TomerAberbach/fn",
  "bugs": {
    "url": "https://github.com/TomerAberbach/fn/issues"
  },
  "license": "Apache 2.0",
  "scripts": {
    "license": "addlicense $(git diff --name-only HEAD)",
    "lint:prettier:base": "prettier --loglevel silent --ignore-path .gitignore",
    "lint:prettier": "pnpm run lint:prettier:base -- --write .",
    "lint:eslint:base": "eslint --cache --ext js --ignore-path .gitignore",
    "lint:eslint": "pnpm run lint:eslint:base -- --fix .",
    "lint": "run-s lint:*",
    "test": "ava -T 20s",
    "coverage": "c8 pnpm run test",
    "build": "babel src --out-dir cjs"
  },
  "prettier": "@tomer/prettier-config",
  "eslintConfig": {
    "extends": "@tomer"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "not op_mini all"
  ],
  "babel": {
    "plugins": [
      [
        "@babel/transform-modules-commonjs",
        {
          "loose": true,
          "strict": true,
          "noInterop": true
        }
      ],
      [
        "add-module-exports",
        {
          "addDefaultProperty": true
        }
      ]
    ]
  },
  "lint-staged": {
    "*.js": [
      "addlicense",
      "pnpm run lint:prettier:base -- --write",
      "pnpm run lint:eslint:base -- --fix"
    ],
    "!(pnpm-lock).{json,yaml,md}": "pnpm run lint:prettier:base -- --write"
  },
  "commitlint": {
    "extends": "@commitlint/config-conventional"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "ava": {
    "require": [
      "./config/fast-check.js"
    ],
    "files": [
      "./test/**/*.js",
      "!**/helpers.js"
    ]
  },
  "devDependencies": {
    "@babel/cli": "7.12.10",
    "@babel/core": "7.12.10",
    "@babel/plugin-transform-modules-commonjs": "7.12.1",
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@tomer/eslint-config": "0.0.14",
    "@tomer/prettier-config": "0.0.2",
    "ava": "3.15.0",
    "ava-fast-check": "4.0.0",
    "babel-eslint": "10.1.0",
    "babel-plugin-add-module-exports": "1.0.4",
    "c8": "7.4.0",
    "eslint": "7.17.0",
    "fast-check": "2.10.0",
    "float-equal": "2.0.0",
    "husky": "4.3.6",
    "lint-staged": "10.5.3",
    "npm-run-all": "4.1.5",
    "object-hash": "2.1.1",
    "prettier": "2.2.1"
  },
  "engines": {
    "node": ">= 12"
  }
}
