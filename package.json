{
  "name": "lfi",
  "version": "0.1.0",
  "author": {
    "name": "Tomer Aberbach",
    "email": "tomeraberbach@gmail.com",
    "url": "https://tomeraberba.ch"
  },
  "description": "A lazy functional iteration library supporting sync, async, and concurrent iteration.",
  "keywords": [
    "generator",
    "lazy",
    "iteration",
    "iterable",
    "iterator",
    "iter",
    "functional",
    "concurrency",
    "promise",
    "async"
  ],
  "homepage": "https://github.com/TomerAberbach/lfi",
  "repository": "TomerAberbach/lfi",
  "bugs": {
    "url": "https://github.com/TomerAberbach/lfi/issues"
  },
  "license": "Apache-2.0",
  "files": [
    "src"
  ],
  "type": "module",
  "engines": {
    "node": ">= 12.17"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "not op_mini all",
    "not ios_saf >= 3.2"
  ],
  "exports": "./src/index.js",
  "module": "./src/index.js",
  "types": "./src/index.d.ts",
  "scripts": {
    "license": "addlicense $(git diff --name-only HEAD)",
    "lint:prettier:base": "prettier --loglevel silent --ignore-path .gitignore",
    "lint:prettier": "run-s \"lint:prettier:base -- --write .\"",
    "lint:eslint:base": "eslint --cache --ext js --ignore-path .gitignore",
    "lint:eslint": "run-s \"lint:eslint:base -- --fix .\"",
    "lint": "run-s lint:*",
    "test:js": "ava",
    "test:ts": "tsd",
    "test": "run-s test:*",
    "coverage": "c8 run-s test:js",
    "docs": "typedoc --plugin typedoc-plugin-markdown"
  },
  "prettier": "@tomer/prettier-config",
  "eslintConfig": {
    "extends": "@tomer",
    "rules": {
      "import/no-unresolved": "off"
    }
  },
  "lint-staged": {
    "*.js": [
      "addlicense",
      "run-s \"lint:prettier:base -- --write {@}\" --",
      "run-s \"lint:eslint:base -- --fix {@}\" --"
    ],
    "*.ts": [
      "addlicense",
      "run-s \"lint:prettier:base -- --write {@}\" --"
    ],
    "*.{json,yml,md}": "run-s \"lint:prettier:base -- --write {@}\" --"
  },
  "ava": {
    "require": [
      "./test/helpers/fast-check.js"
    ]
  },
  "tsd": {
    "directory": "./test"
  },
  "commitlint": {
    "extends": "@commitlint/config-conventional"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "betterator": "0.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "12.0.1",
    "@commitlint/config-conventional": "12.0.1",
    "@sinonjs/fake-timers": "7.0.2",
    "@tomer/eslint-config": "0.1.0",
    "@tomer/prettier-config": "0.1.0",
    "@types/node": "14.14.36",
    "ava": "3.15.0",
    "ava-fast-check": "4.0.2",
    "c8": "7.6.0",
    "eslint": "7.22.0",
    "fast-check": "2.14.0",
    "husky": "4.3.8",
    "lint-staged": "10.5.4",
    "npm-run-all": "4.1.5",
    "object-hash": "2.1.1",
    "p-state": "0.2.0",
    "prettier": "2.2.1",
    "tsd": "0.14.0",
    "typedoc": "0.20.34",
    "typedoc-plugin-markdown": "3.6.0",
    "typescript": "4.2.3"
  }
}
